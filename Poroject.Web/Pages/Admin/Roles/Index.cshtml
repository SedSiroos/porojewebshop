@page
@model Proje.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "لیست نقش کاربران";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">لیست نقش کاربران</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست نقش کاربران
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <a href="/Admin/Roles/CreateRoles" class="btn btn-success btn-sm"> افزودن کاربر جدید</a>
                                <thead>
                                    <tr>
                                        <th>نام نقش های کاربری</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.RoleList)
                                    {
                                        <tr>
                                            <td>@item.RoleTitle</td>
                                            <td>
                                                <a href="/Admin/Roles/EditeRoles/@item.RoleId" class="btn btn-warning btn-sm">ویرایش</a>
                                                <a href="/Admin/Roles/DeleteRole/@item.RoleId" class="btn btn-danger btn-sm">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
</div>