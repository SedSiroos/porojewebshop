@page "{id}"
@using Poroject.DataLayer.Entities.User
@model Proje.Web.Pages.Admin.Users.EditUserModel
@{
    ViewData["Title"] = "ویرایش کاربر";
    List<Role> roles = ViewData["Roles"] as List<Role>;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">ویرایش کاربر</h1>
        </div>
    </div>


    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="editeUserViewModel.UserId" />
            <input type="hidden" asp-for="editeUserViewModel" />
            <div class="col-md-8">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">ویرایش کاربر</a>
                        </h4>
                    </div>
                    <div class="container" style="margin:15px 0px">
                        <div class="form-group">
                            <label class="text-success">@Model.editeUserViewModel.UserName</label>
                        </div>
                        <div class="form-group">
                            <input type="email" asp-for="editeUserViewModel.Email" class="form-control" placeholder="ایمیل">
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="editeUserViewModel.Password" class="form-control" placeholder="کلمه عبور">
                        </div>
                        <label>درصورت وارد کردن کلمه عبور جدید،کلمه عبور تغییر میکند.</label>
                        <div class="form-group">
                            <label>نوع کاربر</label>
                            @foreach (var item in roles)
                            {
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="SelectedRoles" value="@item.RoleId" @((Model.editeUserViewModel.userRoles.Any(r => r == item.RoleId) ? "checked" : ""))> @item.RoleTitle
                                    </label>
                                </div>
                            }
                        </div>                      
                        <p>
                            <input type="submit" value="ویرایش" class="btn btn-success" />
                            <a asp-page="Index" class="btn btn-outline btn-info">انصراف</a>
                        </p>
                    </div>
                </div>
            </div>

            @*<div class="col-md-4">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        پروفایل کاربری
                    </div>
                    <div class="panel-body">
                        <img id="imgAvatar" src="/UserAvatar/@Model.editeUserViewModel.AvatarName" alt="Alternate Text" class="thumbnail" style="width:120px" />
                        <div class="form-group">
                            <label>انتخاب تصویر</label>
                            <input type="file" asp-for="editeUserViewModel.AvatarUser" />
                        </div>
                    </div>
                </div>
            </div>*@
        </form>
    </div>
</div>

