@page "{id}"
@model Poroject.Web.Pages.Admin.Courses.DeleteEpisodeModel
@{
    ViewData["Title"] = "حذف کردن قسمت"+Model.CourseEpisode.EpisodeId;
}

<div class="container">
    <div class="row">
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">پروژه من</a></li>
                <li class="breadcrumb-item active" aria-current="page"> مشخصات قسمت </li>
            </ul>
        </nav>
    </div>

    <main>
        <div class="row">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="name" asp-for="CourseEpisode.EpisodeId" />
                <input type="hidden" name="name" asp-for="CourseEpisode.ID" />
                <input type="hidden" name="name" asp-for="CourseEpisode.EpisodeFileName" />


                <dl class="dl-horizontal">
                    <dt>
                        <h2>  آیا از حذف نقش @Model.CourseEpisode.EpisodeTitle مطمعن هستید؟؟؟ </h2>
                    </dt>
                    <dd></dd>
                </dl>
                <input type="submit" value=" حذف نقش " class="btn btn-outline btn-danger" />
                <a href="/Admin/Courses/IndexEpisode/@Model.CourseEpisode.EpisodeId" class="btn btn-danger btn-sm">حذف</a>
            </form>
        </div>
    </main>
</div>