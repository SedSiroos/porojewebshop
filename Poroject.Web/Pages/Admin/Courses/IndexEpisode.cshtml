@page "{id}"
@using Poroject.Core.Convertors
@model Poroject.Web.Pages.Admin.Courses.IndexEpisodeModel
@{
    ViewData["Title"] = "لیست دوره ها";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">لیست دوره ها</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                لیست قسمت ها
                <div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">

                        <div class="container" style="margin:15px 0px">
                            <a asp-page="CreateEpisode" asp-route-id="@ViewData["IDcourse"].ToString()" class="btn btn-success btn-sm"> افزودن قسمت جدید</a>
                            <a asp-page="Index" asp-route-id="@ViewData["IDcourse"].ToString()" class="btn btn-danger btn-sm"> برگشت</a>
                        </div>
                        <p></p>
                        <thead>
                            <tr>
                                <th>نام قسمت</th>
                                <th>تایم قسمت</th>
                                <th>رایگان</th>
                                <th>تاریخ</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.courseEpisode)
                            {
                                <tr>
                                    <td>@item.EpisodeTitle </td>
                                    <td>@item.EpisodeTime</td>
                                    <td>
                                        @if (item.IsFree)
                                        {
                                            <span class="text-success">
                                                <i class="glyphicon glyphicon-ok"></i>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="glyphicon glyphicon-remove"></i>
                                            </span>
                                        }
                                    </td>
                                    <td>@item.CreateDate.ToShamsi()</td>
                                    <td>
                                        <a href="/Admin/Courses/EditeEpisode/@item.EpisodeId" class="btn btn-warning btn-sm">ویرایش</a>
                                        <a href="/Admin/Courses/DeleteEpisode/@item.EpisodeId" class="btn btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>

                            }
               
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>
