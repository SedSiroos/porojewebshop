@page 
@using Poroject.Core.Convertors
@model Poroject.Web.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "لیست دوره ها";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">لیست دوره ها</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">               

                    لیست دوره های سایت
                    <div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">

                            <div class="container" style="margin:15px 0px">
                                <a asp-page="CreateCourse" class="btn btn-success btn-sm"> افزودن دوره جدید</a>
                            </div>
                            <p></p>
                            <thead>
                                <tr>
                                    <th>عکس دوره</th>
                                    <th>نام دوره</th>
                                    <th>تعدادآموزش ها</th>
                                    <th>تاریخ ثبت نام</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListCourse)
                                {
                                    <tr>
                                        <td>
                                            <img src="/imageCourses/thumbnil/@item.image" alt="Alternate Text" class="thumbnail" />
                                        </td>
                                        <td>@item.Title</td>
                                        <td>@item.EpisodeCount</td>
                                        <td>@item.CreateDate.ToShamsi()</td>
                                        <td>
                                            <a href="/Admin/Courses/EditCourse/@item.CourseId" class="btn btn-warning btn-sm">ویرایش</a>
                                            <a href="/Admin/Courses/IndexEpisode/@item.CourseId" class="btn btn-success btn-sm"> قسمت های آموزش</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

    </div>
