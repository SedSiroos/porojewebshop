@model Poroject.Core.RegisterViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}
<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">تغییر کلمه عبور</li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">
        
        <header><h2> بازیابی کلمه عبور </h2></header>

        <div class="form-layer">
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="ActiveCode" />

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="text" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Password"> </span>
                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="RePassword" type="text" class="form-control" placeholder="تکرار رمز عبور" aria-describedby="password">
                </div>
                <span asp-validation-for="RePassword"> </span>

                <div class="remember-me">
                    <label><input asp-for="RememberMe" type="checkbox" name="">  مرا بخاطر بسپار </label>
                </div>

                <button class="btn btn-success"> ثبت </button>

            </form>
        </div>

    </div>
</main>

