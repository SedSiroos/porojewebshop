<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> پروژه من|@ViewData["Title"] </title>
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/noUiSlider/nouislider.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/MeStyleSheet.css">
    <link rel="stylesheet" type="text/css" href="/css/CustomCss.css">
    <script src="/js/jquery.min.js"></script>
</head>
<body>
    <script src="/js/modernizr-custom.js"></script>

    <div class="landing-layer">
        <div class="container">
            <nav>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <ul>
                            <li>
                                <a href=""> همکاری در فروش </a>
                                <a href=""> درباره ما </a>
                                <a href=""> تماس با ما </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="clientarea">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="loggein ">
                                    <i class="zmdi zmdi-account"></i><a href="/UserPanel"> @User.Identity.Name خوش آمدید </a>/
                                    <a href="/Logout"> خروج </a>
                                </div>
                            }
                            else
                            {
                                <div class="signin ">
                                    <i class="zmdi zmdi-account"></i>
                                    <a href="/Login"> ورود </a> /
                                    <a href="/Register"> عضویت </a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </nav>
            @RenderSection("SearchBox", false);
        </div>
    </div>

    <!-- main manu -->
    @await Component.InvokeAsync("CourseGroupComponent")
    <!-- /main manu -->
    <!-- content -->
    @RenderBody();
    <!-- /content -->
    <!-- footer -->
    <partial name="_footer" />
    <!-- /footer -->

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    @RenderSection("Scripts", false);
</body>
</html>